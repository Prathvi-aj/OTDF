<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
  version="4.0"
  metadata-complete="true">

  <display-name>Welcome to Tomcat</display-name>
  <description>
     Welcome to Tomcat
  </description>

  <servlet>
	<servlet-name>app001</servlet-name>
	<servlet-class>controllers.AdminLoginServlet</servlet-class>
  </servlet>

  <servlet-mapping>
	<servlet-name>app001</servlet-name>
	<url-pattern>/admin/login.do</url-pattern>
  </servlet-mapping>



  <servlet>
	<servlet-name>app002</servlet-name>
	<servlet-class>controllers.LogoutServlet</servlet-class>
  </servlet>

  <servlet-mapping>
	<servlet-name>app002</servlet-name>
	<url-pattern>/admin/logout.do</url-pattern>
  </servlet-mapping>



  <servlet>
	<servlet-name>app003</servlet-name>
	<servlet-class>controllers.AdminTopicsServlet</servlet-class>
  </servlet>

  <servlet-mapping>
	<servlet-name>app003</servlet-name>
	<url-pattern>/admin/admin_topics.do</url-pattern>
  </servlet-mapping>



  <servlet>
	<servlet-name>app004</servlet-name>
	<servlet-class>controllers.AddTopicServlet</servlet-class>
  </servlet>

  <servlet-mapping>
	<servlet-name>app004</servlet-name>
	<url-pattern>/admin/new_topic.do</url-pattern>
  </servlet-mapping>


  <servlet>
	<servlet-name>app005</servlet-name>
	<servlet-class>controllers.CollectTopicsServlet</servlet-class>
  </servlet>

  <servlet-mapping>
	<servlet-name>app005</servlet-name>
	<url-pattern>/admin/collect_topics.do</url-pattern>
  </servlet-mapping>




  <servlet>
	<servlet-name>app006</servlet-name>
	<servlet-class>controllers.TopicQuestionsServlet</servlet-class>
  </servlet>

  <servlet-mapping>
	<servlet-name>app006</servlet-name>
	<url-pattern>/topic_questions.do</url-pattern>
  </servlet-mapping>



  <servlet>
	<servlet-name>app007</servlet-name>
	<servlet-class>controllers.ShowQuestionFormServlet</servlet-class>
  </servlet>

  <servlet-mapping>
	<servlet-name>app007</servlet-name>
	<url-pattern>/show_post_question.do</url-pattern>
  </servlet-mapping>



  <servlet>
	<servlet-name>app008</servlet-name>
	<servlet-class>controllers.UserLoginServlet</servlet-class>
  </servlet>

  <servlet-mapping>
	<servlet-name>app008</servlet-name>
	<url-pattern>/login.do</url-pattern>
  </servlet-mapping>



  <servlet>
	<servlet-name>app009</servlet-name>
	<servlet-class>controllers.ShowRegisterFormServlet</servlet-class>
  </servlet>

  <servlet-mapping>
	<servlet-name>app009</servlet-name>
	<url-pattern>/registration_form.do</url-pattern>
  </servlet-mapping>



  <servlet>
	<servlet-name>app010</servlet-name>
	<servlet-class>controllers.ShowLoginServlet</servlet-class>
  </servlet>

  <servlet-mapping>
	<servlet-name>app010</servlet-name>
	<url-pattern>/show_login.do</url-pattern>
  </servlet-mapping>



  <servlet>
	<servlet-name>app011</servlet-name>
	<servlet-class>controllers.RegisterServlet</servlet-class>
  </servlet>

  <servlet-mapping>
	<servlet-name>app011</servlet-name>
	<url-pattern>/register.do</url-pattern>
  </servlet-mapping>




  <servlet>
	<servlet-name>app012</servlet-name>
	<servlet-class>controllers.LogoutServlet</servlet-class>
  </servlet>

  <servlet-mapping>
	<servlet-name>app012</servlet-name>
	<url-pattern>/logout.do</url-pattern>
  </servlet-mapping>



  <servlet>
	<servlet-name>app013</servlet-name>
	<servlet-class>controllers.PostQuestionServlet</servlet-class>
  </servlet>

  <servlet-mapping>
	<servlet-name>app013</servlet-name>
	<url-pattern>/post_question.do</url-pattern>
  </servlet-mapping>







  <welcome-file-list>
	<welcome-file>index.jsp</welcome-file>
	<welcome-file>admin_welcome.jsp</welcome-file>
  </welcome-file-list>

</web-app>
